{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/clang",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/outputs/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
            "dependsOn": "ensure_outputs_dir"
        },
        {
            "label": "ensure_outputs_dir",
            "type": "shell",
            "command": "mkdir",
            "args": [
                "-p",
                "${fileDirname}/outputs"
            ]
        }
    ],
    "version": "2.0.0"
}